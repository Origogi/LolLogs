<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mostChampImage0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mostChampImage1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/mostChampWinRate0"
        style="@style/TextStyle11"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@{data.mostChampions.get(0).winsRateString}"
        app:layout_constraintLeft_toLeftOf="@id/mostChampImage0"
        app:layout_constraintRight_toRightOf="@id/mostChampImage0"
        app:layout_constraintTop_toBottomOf="@id/mostChampImage0"
        tools:text="42%" />

    <ImageView
        android:id="@+id/mostChampImage1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toRightOf="@id/mostChampImage0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/mostChampWinRate1"
        style="@style/TextStyle11"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@{data.mostChampions.get(1).winsRateString}"
        app:layout_constraintLeft_toLeftOf="@id/mostChampImage1"
        app:layout_constraintRight_toRightOf="@id/mostChampImage1"
        app:layout_constraintTop_toBottomOf="@id/mostChampImage1"
        tools:text="42%" />

</androidx.constraintlayout.widget.ConstraintLayout>